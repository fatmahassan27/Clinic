@model DoctorVM
@inject IShiftService ShiftService;


@{
    ViewData["Title"] = "Doctor Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between" style="background-color: #4CAF50; color: white;">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-user-md"></i> Doctor Profile
                    </h4>
                    
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <strong>Name:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model?.Name 
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-3">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model?.Email 
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-3">
                            <strong>Shift Start From :</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model?.Shift?.StartTime.ToString("HH:mm")
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-3">
                            <strong>Shift End At :</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model?.Shift?.EndTime.ToString("HH:mm")
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <a asp-action="TodaysAppointments" asp-route-id="@Model?.Id" class="btn btn-outline-secondary"> View Appointments </a>


                </div>
            </div>
        </div>
    </div>
</div>


